<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAF3E0"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_margin="10dp"
        android:src="@drawable/digital_key"
        app:srcCompat="@drawable/llave" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/llnombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Llave Principal"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dpropietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Propietario JuniverJair"
            android:textColor="#868686"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/llestado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Compartida a 0 Usuarios"
            android:textColor="#868686"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:gravity="right">

        <TextView
            android:id="@+id/llfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="VÃ¡lida hasta 04/2020"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>